# Terraform configuration for different environments
project_id = "your-gcp-project-id"
region     = "europe-west1"
zone       = "europe-west1-b"

environment = "prod"
app_name    = "mariami-fin-control"

# Database configuration
db_tier = "db-f1-micro"  # For production, consider db-n1-standard-1 or higher

# Redis configuration
redis_memory_size_gb = 1
redis_tier          = "BASIC"  # For production, consider "STANDARD_HA"

# Scaling configuration
min_instances = 0    # Set to 1+ for production to avoid cold starts
max_instances = 10
cpu_limit     = "1000m"
memory_limit  = "2Gi"

# CORS and domain configuration
allowed_origins = [
  "https://yourdomain.com",
  "https://www.yourdomain.com"
]